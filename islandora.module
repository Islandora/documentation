  $hooks = islandora_build_hook_list(ISLANDORA_OVERVIEW_HOOK, $object->models);
  foreach ($hooks as $hook) {
    $temp = module_invoke_all($hook, $object);
    islandora_as_renderable_array($temp);
    if (!empty($temp)) {
